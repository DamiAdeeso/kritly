{
  "name": "rev-microservices",
  "version": "1.0.0",
  "description": "NestJS Microservices with Authentication",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "nx build",
    "test": "nx test",
    "lint": "nx lint",
    "dev": "cross-env NODE_ENV=local nx run-many --target=serve --all --parallel",
    "dev:gateway": "cross-env NODE_ENV=local nx serve gateway",
    "dev:auth": "cross-env NODE_ENV=local nx serve auth-service",
    "start:dev": "cross-env NODE_ENV=development nx run-many --target=serve --all --parallel",
    "start:staging": "cross-env NODE_ENV=staging nx run-many --target=serve --all --parallel",
    "start:production": "cross-env NODE_ENV=production nx run-many --target=serve --all --parallel",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "test:grpc": "node test-grpc.js",
    "db:generate": "nx run auth-service:prisma:generate",
    "db:migrate": "nx run auth-service:prisma:migrate",
    "db:migrate:deploy": "nx run auth-service:prisma:migrate:deploy",
    "db:studio": "nx run auth-service:prisma:studio",
    "db:seed": "nx run auth-service:prisma:seed",
    "affected:build": "nx affected:build",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "graph": "nx graph",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "clean": "nx reset",
    "generate": "nx generate"
  },
  "devDependencies": {
    "@grpc/grpc-js": "latest",
    "@grpc/proto-loader": "latest",
    "@nx/eslint-plugin": "latest",
    "@nx/jest": "latest",
    "@nx/js": "latest",
    "@nx/nest": "latest",
    "@nx/webpack": "latest",
    "@nx/workspace": "latest",
    "cross-env": "^10.0.0",
    "eslint": "latest",
    "grpc-tools": "latest",
    "nx": "latest",
    "prettier": "latest",
    "typescript": "latest"
  }
}
