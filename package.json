{
  "name": "rev-microservices",
  "version": "1.0.0",
  "description": "NestJS Microservices with Authentication",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "nx build",
    "test": "nx test",
    "lint": "nx lint",
    "dev": "nx run-many --target=serve --all --parallel",
    "dev:gateway": "nx serve gateway",
    "dev:auth": "nx serve auth-service",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "test:grpc": "node test-grpc.js",
    "db:generate": "nx run auth-service:prisma:generate",
    "db:migrate": "nx run auth-service:prisma:migrate",
    "db:migrate:deploy": "nx run auth-service:prisma:migrate:deploy",
    "db:studio": "nx run auth-service:prisma:studio",
    "affected:build": "nx affected:build",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "graph": "nx graph",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "clean": "nx reset",
    "generate": "nx generate"
  },
      "devDependencies": {
      "@nx/workspace": "latest",
      "@nx/nest": "latest",
      "@nx/eslint-plugin": "latest",
      "@nx/jest": "latest",
      "@nx/webpack": "latest",
      "@nx/js": "latest",
      "nx": "latest",
      "typescript": "latest",
      "eslint": "latest",
      "prettier": "latest",
      "@grpc/grpc-js": "latest",
      "@grpc/proto-loader": "latest",
      "grpc-tools": "latest"
    }
}
