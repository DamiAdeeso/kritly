{
  "name": "gateway",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/gateway/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/apps/gateway/dist"],
      "defaultConfiguration": "production",
      "options": {
        "command": "tsc -p apps/gateway/tsconfig.json"
      },
      "configurations": {
        "development": {
          "command": "tsc -p apps/gateway/tsconfig.json"
        },
        "production": {
          "command": "tsc -p apps/gateway/tsconfig.json"
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "node apps/gateway/dist/src/main.js",
        "cwd": "."
      },
      "configurations": {
        "development": {
          "command": "node apps/gateway/dist/src/main.js"
        },
        "production": {
          "command": "node apps/gateway/dist/src/main.js"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/gateway/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "e2e": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/gateway/jest-e2e.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:gateway", "type:app"]
}
